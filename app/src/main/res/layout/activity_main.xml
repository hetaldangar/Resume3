<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#1E88E5">
        <!--    Page Title-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:text="@string/app_title"

            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_30ssp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:background="#43000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgresume1"
            android:layout_width="200dp"
            android:layout_height="184dp"
            android:layout_margin="10dp"
            android:src="@drawable/resume5" />

        <ImageView
            android:id="@+id/imgresume2"
            android:layout_width="150dp"
            android:layout_height="184dp"
            android:layout_margin="10dp"
            android:src="@drawable/resume2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:background="#43000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgresume3"
            android:layout_width="200dp"
            android:layout_height="184dp"
            android:layout_margin="10dp"
            android:src="@drawable/resume3" />

        <ImageView
            android:id="@+id/imgresume4"
            android:layout_width="150dp"
            android:layout_height="184dp"
            android:layout_margin="10dp"
            android:src="@drawable/resume4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:background="#43000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgresume5"
            android:layout_width="200dp"
            android:layout_height="184dp"
            android:layout_margin="10dp"
            android:src="@drawable/resume1" />
        \

    </LinearLayout>






</LinearLayout>


